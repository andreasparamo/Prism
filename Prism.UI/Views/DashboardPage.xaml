<UserControl x:Class="Prism.UI.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">

    <Border Background="{StaticResource CardBackground}" Padding="30">
        
        <!-- Main Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            
            <TextBlock Text="Block List Manager" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>
            
            <!-- Websites Button -->
            <Button Style="{StaticResource AnimatedButtonStyle}"
                    Margin="0,0,0,20"
                    Command="{Binding NavigateToBlockedWebsitesCommand}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Web" 
                                                Width="24" 
                                                Height="24" 
                                                VerticalAlignment="Center" 
                                                Margin="0,0,12,0"/>
                    <TextBlock Text="Manage Blocked Websites" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Applications Button -->
            <Button Style="{StaticResource AnimatedButtonStyle}"
                    Command="{Binding NavigateToBlockedApplicationsCommand}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Application" 
                                                Width="24" 
                                                Height="24" 
                                                VerticalAlignment="Center" 
                                                Margin="0,0,12,0"/>
                    <TextBlock Text="Manage Blocked Applications" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
    </Border>
</UserControl>