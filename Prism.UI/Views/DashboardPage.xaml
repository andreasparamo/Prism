<UserControl x:Class="Prism.UI.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">

    <Border Background="{StaticResource CardBackground}" Padding="30">
        
        <!-- Main Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            
            <TextBlock Text="Block List Manager" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>
            
            <!-- Websites Button -->
            <Button Height="60"
                    Margin="0,0,0,20"
                    Background="#000000"
                    Foreground="White"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Cursor="Hand"
                    Command="{Binding NavigateToBlockedWebsitesCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="20,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1A1A1A"/>
                                            <Setter Property="BorderBrush" Value="#3A3A3A"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#0A0A0A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Web" 
                                                Width="24" 
                                                Height="24" 
                                                VerticalAlignment="Center" 
                                                Margin="0,0,12,0"/>
                    <TextBlock Text="Manage Blocked Websites" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Applications Button -->
            <Button Height="60"
                    Background="#000000"
                    Foreground="White"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1"
                    Cursor="Hand"
                    Command="{Binding NavigateToBlockedApplicationsCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="20,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1A1A1A"/>
                                            <Setter Property="BorderBrush" Value="#3A3A3A"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#0A0A0A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Application" 
                                                Width="24" 
                                                Height="24" 
                                                VerticalAlignment="Center" 
                                                Margin="0,0,12,0"/>
                    <TextBlock Text="Manage Blocked Applications" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
    </Border>
</UserControl>